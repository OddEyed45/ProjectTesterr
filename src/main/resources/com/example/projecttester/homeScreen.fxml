<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="pane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projecttester.GameController">
   <children>
      <ImageView fitHeight="407.0" fitWidth="604.0" layoutX="-4.0" layoutY="1.0"
                 pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../FINALHOME.png" />
         </image>
      </ImageView>
      <ImageView fx:id="lemonadeClick" fitHeight="200.0" fitWidth="200.0" layoutX="386.0"
                 layoutY="199.0" onMouseClicked="#mouseClick" pickOnBounds="true" preserveRatio="true" />
      <Button fx:id="race1" layoutX="312.0" layoutY="61.0" mnemonicParsing="false"
              onAction="#startRace1" text="Championship" />

      <Button fx:id="trainFly" layoutX="321.0" layoutY="20.0" mnemonicParsing="false"
              onAction="#startTrainingFly" text="Train flying" />
      <ImageView fx:id="duckHolder" fitHeight="70.0" fitWidth="75.0" layoutX="124.0"
                 layoutY="309.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../duck.png" />
         </image>
      </ImageView>
      <Label layoutX="24.0" layoutY="14.0" text="Flying Level" />
      <Label layoutX="24.0" layoutY="57.0" text="Energy Level" />
      <ImageView fitHeight="50.0" fitWidth="48.0" layoutX="430.0"
                 layoutY="18.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../coin.png" />
         </image>
      </ImageView>
      <Label fx:id="coinShow" contentDisplay="CENTER" layoutX="480.0"
             layoutY="25.0" prefHeight="40.0" prefWidth="99.0" text="Coins: 0" wrapText="true" />
      <Label fx:id="displayMessage" alignment="CENTER" layoutX="386.0" layoutY="120.0" prefHeight="92.0"
             prefWidth="211.0" text="Click the Lemonade Stand to buy Lemonade!" wrapText="true" />
      <ProgressBar fx:id="flyBar" layoutX="24.0" layoutY="33.0"
                   prefWidth="200.0" progress="0.0" />
      <ProgressBar fx:id="energyBar" layoutX="24.0" layoutY="77.0" prefWidth="200.0" progress="0.0" />
      </children>
</AnchorPane>
